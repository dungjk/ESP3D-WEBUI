{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES5",
    "module": "ESNext",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}
